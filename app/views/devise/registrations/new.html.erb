<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-4">
    <div class="form-inputs">
        <%= f.input :username, required: true, autofocus: true, label: false, placeholder: 'Username' %>
        <%= f.input :email, required: true, autofocus: true, label: false, placeholder: 'Email' %>
        <%= f.input :password, required: true,
        # hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
        label: false, placeholder: 'Password' %>
        <%= f.input :password_confirmation, required: true, label: false, placeholder: 'Password Confirmation' %>
        <%= f.input :roles, collection: Role.where.not(name: :admin), value_method: :name, label: false, selected: :talent, include_blank: false %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: 'btn btn-outline-light btn-sm' %>
    </div>
    </div>
  </div>
</div>

<% end %>

<%= render "devise/shared/links" %>
